<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rounded"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dictate"
        style="@style/NewAction"
        android:drawableLeft="@drawable/ic_mic_24dp"
        android:text="@string/dictate_your_action" />

    <TextView
        android:id="@+id/createTodo"
        style="@style/NewAction"
        android:drawableLeft="@drawable/ic_format_list_bulleted_24dp"
        android:text="@string/create_to_do" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_background_grey" />

    <TextView
        android:id="@+id/takeVote"
        style="@style/NewAction"
        android:drawableLeft="@drawable/ic_mic_24dp"
        android:text="@string/take_a_vote" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_background_grey" />

    <TextView
        android:id="@+id/callMeeting"
        android:drawableLeft="@drawable/ic_date_range_green_24dp"
        style="@style/NewAction"
        android:text="@string/call_a_meeting" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_background_grey" />


    <Button
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_bottom_rounded"
        android:fontFamily="sans-serif-medium"
        android:text="@string/close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>