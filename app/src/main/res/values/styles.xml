<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for no title bar -->
    <style name="Theme.AppCompat.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Theme for no title bar -->
    <style name="Theme.AppCompat.Transparent" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- For headers on single inputs, etc -->
    <style name="LargeHeader">
        <item name="android:textSize">@dimen/txt_header_1</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumHeader">
        <item name="android:textSize">@dimen/txt_header_3</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallHeader">
        <item name="android:textSize">@dimen/txt_header_4</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LargeBodyText">
        <item name="android:textSize">@dimen/txt_body_large</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <!-- Styling text input -->
    <style name="SingleEditTextInput">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="OneLineLargeTextInput" parent="SingleEditTextInput">
        <item name="android:padding">@dimen/padding_std_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_std_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_std_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="MultiLineLargeInput">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">false</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <!-- Styling buttons -->
    <style name="DefaultActionButton">
        <item name="android:background">@drawable/btn_primary_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_std_small</item>
        <item name="android:layout_marginRight">@dimen/margin_std_small</item>
    </style>

    <!-- Progress bar -->
    <style name="ProgressBarMedium" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="group_option_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NewAction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>

    <style name="StandardInputField">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/default_font_color</item>
    </style>

    <style name="ConfirmButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/standard_button_selector</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CancelButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
